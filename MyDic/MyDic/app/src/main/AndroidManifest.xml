<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jp.gr.java_conf.bunooboi.mydic">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.Start"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Main"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden"/>
        <activity
            android:name=".Activity.Stop"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.ListLinkConfig"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.ListLinkSentence"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.Setting"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.SelectRepeat"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.ListEditConfig"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".Activity.ListEditSentence"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.Sort"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.Edit"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/*"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.GameStart"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.GameSelectDic"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Game.GameFall"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Game.GameSelect"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Game.GameMemory"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Activity.GameFin"
            android:launchMode="singleTask"/>

        <service android:name="MainService"/>
        <service android:name="BackService"/>
        <service android:name=".CheckService"/>

        <receiver android:name=".StartupReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>