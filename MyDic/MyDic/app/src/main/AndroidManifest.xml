<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.gr.java_conf.bunooboi.mydic">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2096872993008006~2033814746"/>

        <activity
            android:name=".Activity.Start"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Main"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
        <activity
            android:name=".Activity.Edit"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
        <activity
            android:name=".Activity.Tag"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
        <activity
            android:name=".Activity.GameStart"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.GameSelectDic"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.GameSelect"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.GameFall"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.GameFin"
            android:launchMode="singleTask" />
    </application>

</manifest>
